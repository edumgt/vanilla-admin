{% extends "_base.njk" %}
{% block htmlclass %}
   h-100
{% endblock htmlclass %}
{% block title %}
   Email Sent
{% endblock title %}
{% block bodyclass %}
   h-100
{% endblock bodyclass %}
{% block content %}
   <div class="mid-center-container">
      <div class="mid-center-inner">
         <div class="card">
            <div class="card-body">
               <div class="app-brand">
                  <a href="index.html" class="app-brand-link">
                     <img src="assets/img/logo.png" alt="Logo" class="logo-image">
                     <h5 class="logo-text">Vanilla Admin</h5>
                  </a>
               </div>
               <div class="mb-5">
                  <h5 class="mb-1">Success</h5>
                  <p>
                     An email has been sent to your email address: <b>abc@xyz.com</b>. Follow the instructions inside it
                     to reset your password.
                  </p>
               </div>
               <div>
                  <a href="index.html" class="btn btn-primary w-100">Back to Home Page</a>
               </div>
            </div>
         </div>
      </div>
   </div>
{% endblock content %}
